      </mtd>
    </mtr>
    <mtr>
      <mtd><mn>costante</mn></mtd>
      <mtd><mn>0</mn></mtd>
    </mtr>
    <mtr>
      <mtd columnspan="2">
        <mtext fontweight="bold">Funzione esponenziale:</mtext>	
      </mtd>
    </mtr>
    <mtr>
      <mtd><msup><mi>x</mi><mi>&alpha;</mi></msup></mtd>
      <mtd>
        <mrow>
	  <mi>&alpha;</mi>
	  <mo>&InvisibleTimes;</mo>
	  <msup>
	    <mi>x</mi>
	    <mrow><mi>&alpha;</mi><mo>-</mo><mn>1</mn></mrow>
	  </msup>
	</mrow>
      </mtd>
    </mtr>
    <mtr>
      <mtd columnspan="2">
        <mtext>In particolare:</mtext>	
      </mtd>
    </mtr>
    <mtr>
      <mtd><mi>x</mi></mtd>
      <mtd><mn>1</mn></mtd>
    </mtr>
