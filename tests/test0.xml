        <mfrac>
	  <mn>1</mn>
	  <mrow>
	    <mi>n</mi>
	    <mo>&InvisibleTimes;</mo>
	    <mroot>
	      <msup>
	        <mi>x</mi>
		<mrow><mi>n</mi><mo>-</mo><mn>1</mn></mrow>
	      </msup>	
	      <mi>n</mi>
	    </mroot>
	  </mrow>
	</mfrac>
      </mtd>
    </mtr>
    <mtr>
      <mtd><msqrt><mi>x</mi></msqrt></mtd>
      <mtd><mfrac><mn>1</mn><mrow><mn>2</mn><mo>&InvisibleTimes;</mo><msqrt><mi>x</mi></msqrt></mrow></mfrac></mtd>
