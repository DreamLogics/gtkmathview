
DOM_CFLAGS = @DOM_CFLAGS@
DOM_LIBS = @DOM_LIBS@

bin_PROGRAMS = mathmlviewer
noinst_PROGRAMS = mathmlviewer.debug

noinst_HEADERS = guiGTK.h

mathmlviewer_SOURCES = main.cc guiGTK.c

mathmlviewer_LDADD = \
  -lstdc++ \
  $(DOM_LIBS) \
  $(GTK_LIBS) \
  $(top_builddir)/src/libgtkmathview.la

mathmlviewer_debug_SOURCES = main.cc guiGTK.c

mathmlviewer_debug_LDADD = \
  -lstdc++ \
  $(DOM_LIBS) \
  $(GTK_LIBS) \
  $(top_builddir)/src/libgtkmathview.la

INCLUDES = \
  $(DOM_CFLAGS) \
  $(GTK_CFLAGS) \
  -I$(top_srcdir)/src/ \
  -I$(top_srcdir)/auto/

